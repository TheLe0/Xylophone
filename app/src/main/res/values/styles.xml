<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NoActionBar" parent="@style/Theme.MaterialComponents.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/background_contrast</item>
        <item name="colorAccent">@color/background</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:navigationBarColor">@color/background_contrast</item>
    </style>

    <style name="KeyStyle">
        <item name="android:layout_weight">@dimen/KeyStyle_weight</item>
        <item name="android:layout_marginTop">@dimen/KeyStyle_marginTop</item>
        <item name="android:layout_marginBottom">@dimen/KeyStyle_marginBottom</item>
    </style>

</resources>